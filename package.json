{
  "name": "handy-ts-tools",
  "version": "2.0.0",
  "description": "Collection of TypeScript-first helpers, type guards, and runtime asserts.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Phillbot/handy-ts-tools"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "DOCS.md",
    "AI_NOTICE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:types": "pnpm run build && tsd",
    "test:all": "pnpm run test && pnpm run test:types",
    "reborn": "pnpm run clean && pnpm run build && pnpm run test:all"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsd": "^0.30.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.9"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "typescript",
    "helpers",
    "typeguards",
    "assertions",
    "utility"
  ],
  "bugs": {
    "url": "https://github.com/Phillbot/handy-ts-tools/issues"
  },
  "homepage": "https://github.com/Phillbot/handy-ts-tools#readme"
}
